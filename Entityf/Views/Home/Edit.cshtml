@model UserModel


<form asp-controller="Home" asp-action="Edit" method="post">
    <div class="form-group">
        <label>Email Address</label>
        <input type="email" placeholder="Enter Email" asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label>Name</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label>Username</label>
        <input type="text" asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label for="Gender">Gender</label>
        <select class="form-control" id="Gender" name="Gender" asp-for="Gender">
            <option value="">-- Select Gender --</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label>Role</label><br />
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="Viewer" name="Role" value="Viewer" asp-for="Role" checked />
            <label class="form-check-label" for="Viewer">Viewer</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="Editor" name="Role" value="Editor" asp-for="Role" />
            <label class="form-check-label" for="Editor">Editor</label>
        </div>
    </div>
    <div class="form-group mt-3">
        <label for="DateOfBirth">Date of Birth</label>
        <input class="form-control" type="date" id="DateOfBirth" name="DateOfBirth" asp-for="DateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label for="Age">Age</label>
        <input class="form-control" type="range" id="Age" name="Age" min="0" max="100" asp-for="Age" />
        <span id="ageValue" class="slider-value"></span>
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <input type="checkbox" id="Mycheckbox" name="Mycheckbox" asp-for="MyCheckbox" />
        <label for="myCheckbox">I Agree Terms & Conditions</label>
    </div>
    <button type="submit" class="btn btn-primary mt-3 ">Update</button>
</form>